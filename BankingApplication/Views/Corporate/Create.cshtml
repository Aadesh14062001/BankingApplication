@model BankingApplication.Models.CorporateModel
@{
    ViewData["Title"] = "Add Corporate";
}

<div class="container mt-4">
    <h2 class="fw-bold mb-4">Add New Corporate</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label asp-for="CorporateName" class="form-label">Corporate Name</label>
                    <input asp-for="CorporateName" class="form-control" placeholder="Enter corporate name" required />
                </div>
                <div class="mb-3">
                    <label asp-for="Location" class="form-label">Location</label>
                    <input asp-for="Location" class="form-control" placeholder="Enter location (optional)" />
                </div>
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-save"></i> Save
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back
                </a>
            </form>
        </div>
    </div>
</div>
